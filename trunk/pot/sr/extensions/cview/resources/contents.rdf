<?xml version="1.0"?>
<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

  <!-- list all the packages being supplied by this jar -->
  <RDF:Seq about="urn:mozilla:locale:root">
    <RDF:li resource="urn:mozilla:locale:${locale}"/>
  </RDF:Seq>

  <!-- locale information -->
  <RDF:Description about="urn:mozilla:locale:${locale}"
        chrome:displayName="English(US)"
        chrome:author="mozilla.org"
        chrome:name="${locale}"
        chrome:previewURL="http://www.mozilla.org/locales/${locale}.gif">
    <chrome:packages>
      <RDF:Seq about="urn:mozilla:locale:${locale}:packages">
        <RDF:li resource="urn:mozilla:locale:${locale}:cview"/>
      </RDF:Seq>
    </chrome:packages>
  </RDF:Description>
</RDF:RDF>
